<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_id_name"
    tools:context="com.txls.txlashou.home.PayPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed">
        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/btn_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付密码设置"
            android:textSize="@dimen/activity_reg_text_size"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_phone_code"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="设置支付密码"/>
        <EditText
            android:id="@+id/pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:gravity="right"
            android:maxLength="6"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:hint="请输入6位数字支付密码"
            android:textSize="@dimen/activity_text_size"
            android:textColorHint="@color/color_gray"
            android:textColor="@color/color_black"
            android:inputType="numberPassword"
            android:background="@null"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_phone_code"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="确认支付密码"/>
        <EditText
            android:id="@+id/pay_pwd_agin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:gravity="right"
            android:paddingRight="10dp"
            android:hint="两次密码输入必须一致"
            android:maxLength="6"
            android:textSize="@dimen/activity_text_size"
            android:singleLine="true"
            android:textColorHint="@color/color_gray"
            android:textColor="@color/color_black"
            android:inputType="numberPassword"
            android:background="@null"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorRed"
        android:paddingTop="20dp"
        android:textSize="12sp"
        android:text="*支付密码为每次还款时您的支付密码，由6位数字密码组成，
请您谨慎设置，并牢记此密" />

    <Button
        android:id="@+id/btn_pay_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="54dp"
        android:background="@mipmap/btn_submit"
        android:text="完成"
        android:textSize="20sp"/>

</LinearLayout>
