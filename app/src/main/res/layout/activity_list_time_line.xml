<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_time_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_id_name"
    android:orientation="vertical"
    tools:context="com.txls.txlashou.home.ListTimeLineActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed">
        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/btn_return"/>
        <TextView
            android:id="@+id/tv_repayment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未出账单"
            android:textSize="@dimen/activity_reg_text_size"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/color_white"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/all_list_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_phone_code"
            android:textSize="18sp"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="6dp"
           android:layout_below="@+id/all_list_money">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:background="@mipmap/img_hua"/>
           <TextView
               android:id="@+id/last_repayment_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textColor="@color/color_phone_code"
               android:textSize="12sp"
               />
       </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/time_line_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
    </ListView>



</LinearLayout>
