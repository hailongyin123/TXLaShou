<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_id_name"
    tools:context="com.txls.txlashou.home.FindPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed">
        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/btn_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置密码"
            android:textSize="@dimen/activity_reg_text_size"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/find_pwd_edit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:textColor="@color/color_phone_code"
        android:inputType="textPassword"
        android:textColorHint="@color/color_phone_code"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        android:hint="请输入新密码"/>

    <EditText
        android:id="@+id/find_pwd_edit_agin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:textColorHint="@color/color_phone_code"
        android:textColor="@color/color_phone_code"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:hint="请确认新密码"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">
        <EditText
            android:id="@+id/get_phone_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_phone_code"
            android:singleLine="true"
            android:maxLength="6"
            android:inputType="number"
            android:background="@null"
            android:paddingLeft="100dp"/>
        <TextView
            android:id="@+id/text_phone_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_phone_code"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/app_phone_code"/>
        <TextView
            android:id="@+id/find_pwd_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:text="获取验证码"
            android:textSize="@dimen/activity_text_size"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/color_phone_code"
            android:background="@mipmap/btn_phone_code"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_find_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@mipmap/btn_submit"
        android:text="找回密码"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorRed"
        android:paddingTop="20dp"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"
        android:text="*密码需要8-16位字符组成，建议使用字母加数字的组合方式" />

</LinearLayout>
